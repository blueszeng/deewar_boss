<link rel="stylesheet" type="text/css" href="/assets/global/plugins/select2/select2.css"/>
<link rel="stylesheet" type="text/css" href="/assets/global/plugins/datatables/plugins/bootstrap/dataTables.bootstrap.css"/>
<link href="/assets/global/plugins/bootstrap-switch/css/bootstrap-switch.min.css" rel="stylesheet" type="text/css"/>
<h3 class="page-title">
    代理人资料管理
    <small>系统内所有代理人资料</small>
</h3>
<div class="row">
    <div class="col-md-12">
        <div class="portlet">
            <div class="portlet-title">
                <div class="caption font-green-sharp">
                    <i class="fa fa-plus font-green-sharp"></i>
                    <span class="caption-subject bold uppercase"> 编辑代理人</span>
                </div>
                <div class="actions">
                    <a href="/market/agentall/" class="ajaxify btn btn-circle red-sunglo">
                        <i class="fa fa-reply"></i>
                        返回
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="portlet" id="formwizard">
            <div class="portlet-body form">
                <form action="/market/agentall/edit.html" class="form-horizontal" id="submit_form" method="POST">
                    <div class="form-wizard">
                        <div class="form-body">
                            <ul class="nav nav-pills nav-justified steps">
                                <li>
                                    <a href="#tab1" data-toggle="tab" class="step">
												<span class="number">
												1 </span>
												<span class="desc">
												<i class="fa fa-check"></i> 代理人资料 </span>
                                    </a>
                                </li>
                                <li>
                                    <a href="#tab2" data-toggle="tab" class="step">
												<span class="number">
												2 </span>
												<span class="desc">
												<i class="fa fa-check"></i> 代理区域 </span>
                                    </a>
                                </li>
                                <li>
                                    <a href="#tab3" data-toggle="tab" class="step active">
												<span class="number">
												3 </span>
												<span class="desc">
												<i class="fa fa-check"></i> 结算资料 </span>
                                    </a>
                                </li>
                            </ul>
                            <div id="bar" class="progress progress-striped" role="progressbar">
                                <div class="progress-bar progress-bar-success">
                                </div>
                            </div>
                            <div class="tab-content">
                                <div class="tab-pane active" id="tab1">
                                    <input type="hidden" name="oldzoneids" value="{oldzoneids}" />
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">上级营销专员：</label>
                                        <div class="col-md-9">
                                            <input type="text" title="" name="staffname" id="selectstaff" class="form-control select2" value="{agents.upstaff}">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">代理人账号名：<span class="required" aria-required="true">
										* </span></label>
                                        <div class="col-md-9">
                                            <input type="text" name="username" class="form-control" title="" value="{staff.username}" readonly />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">登录密码：<span class="required" aria-required="true">
										* </span></label>
                                        <div class="col-md-9">
                                            <input id="password" type="password" name="password" class="form-control" value="changeme" title="" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">再次输入密码：<span class="required" aria-required="true">
										* </span></label>
                                        <div class="col-md-9">
                                            <input type="password" name="password2" class="form-control" value="changeme" title="" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">姓名：<span class="required" aria-required="true">
										* </span></label>
                                        <div class="col-md-9">
                                            <input type="text" name="showname" class="form-control" value="{staff.showname}" title="" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">手机号码：<span class="required" aria-required="true">
										* </span></label>
                                        <div class="col-md-9">
                                            <input type="tel" name="mobile" class="form-control" value="{staff.mobile}" title="" />
                                        </div>
                                    </div>
                                </div>
                                <div class="tab-pane" id="tab2">
                                    <input type="hidden" name="zone" value="{villages}" />
                                    <div class="table-container">
                                        <div class="table-toolbar">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="btn-group">
                                                        <button id="agent_zone_new" class="btn green">
                                                            <i class="fa fa-plus"></i> 增加新代理小区/区域
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <table class="table table-striped table-hover table-bordered" id="agent_zone_table">
                                            <thead>
                                            <tr>
                                                <th>
                                                    所属街道
                                                </th>
                                                <th>
                                                    小区/区域简称
                                                </th>
                                                <th>
                                                    地址
                                                </th>
                                                <th>
                                                    户数
                                                </th>
                                                <th>
                                                    关键字1
                                                </th>
                                                <th>
                                                    关键字2
                                                </th>
                                                <th>
                                                    关键字3
                                                </th>
                                                <th>
                                                    编辑
                                                </th>
                                                <th>
                                                    删除
                                                </th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class="tab-pane" id="tab3">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">状态：<span class="required" aria-required="true">
										* </span></label>
                                        <div class="col-md-9">
                                            <input title="" type="checkbox" name="blocked" class="make-switch" {@eq key="{agents.blocked}" value="1"}checked{/eq} data-on-color="danger" data-off-color="success" data-on-text="屏蔽" data-off-text="激活">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">身份证号码：<span class="required" aria-required="true">
										* </span></label>
                                        <div class="col-md-9">
                                            <input type="text" name="idcard" class="form-control" title="" value="{agents.idcard}" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">开户银行：</label>
                                        <div class="col-md-9">
                                            <input type="text" name="bankname" class="form-control" value="{agents.bankname}" title="" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">开户姓名：</label>
                                        <div class="col-md-9">
                                            <input type="text" name="bankuser" class="form-control" value="{agents.bankuser}" title="" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">银行账号：</label>
                                        <div class="col-md-9">
                                            <input type="text" name="bankno" class="form-control" value="{agents.bankno}" title="" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-actions">
                            <div class="row">
                                <div class="col-md-offset-3 col-md-9">
                                    <a class="btn btn-default btn-circle button-previous">
                                        <i class="fa fa-angle-left"></i> 上一步
                                    </a>
                                    <a class="btn btn-primary btn-circle button-next">
                                        下一步 <i class="fa fa-angle-right"></i>
                                    </a>
                                    <a class="btn btn-success btn-circle button-submit">
                                        确定 <i class="fa fa-play"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<form name="valueform" id="valueform">
    <input type="hidden" name="zonestring" value="{zones}" />
    <input type="hidden" name="villagestring" value="{villages}" />
</form>
<script src="/assets/global/plugins/bootstrap-switch/js/bootstrap-switch.min.js" type="text/javascript"></script>
<script src="/assets/global/plugins/select2/select2.min.js"></script>
<script src="/assets/global/plugins/select2/select2_locale_zh-CN.js"></script>
<script src="/assets/global/plugins/bootstrap-wizard/jquery.bootstrap.wizard.min.js" type="text/javascript"></script>
<script src="/assets/global/plugins/jquery-validation/js/jquery.validate.min.js"></script>
<script src="/assets/global/plugins/jquery-validation/js/localization/messages_zh.min.js"></script>
<script type="text/javascript" src="/assets/global/plugins/datatables/media/js/jquery.dataTables.min.js"></script>
<script type="text/javascript" src="/assets/global/plugins/datatables/plugins/bootstrap/dataTables.bootstrap.js"></script>
<script src="/assets/global/scripts/datatable.js"></script>
<script>

    $(document).ready(function(){

        var valueform = $('#valueform');
        var form = $('#submit_form');

        $("#selectstaff").select2({
            placeholder: "请选择上级营销专员",
            minimumInputLength: 1,
            ajax: {
                url: "/market/account/query.html",
                dataType: 'json',
                quietMillis: 250,
                data: function (term) {
                    return {
                        q: term
                    };
                },
                results: function (data) {
                    return { results: data};
                },
                cache: false
            },
            initSelection: function(element, callback) {
                var id = $(element).val();
                if (id !== "") {
                    $.ajax("/market/account/select.html?q=" + id, {
                        dataType: "json"
                    }).done(function(data) {
                        callback(data);
                    });
                }
            },
            dropdownCssClass: "bigdrop",
            escapeMarkup: function (m) {
                return m;
            }
        });

        /**
         * @return {boolean}
         */
        function IsNum(num){
            var reNum=/^\d*$/;
            return(reNum.test(num));
        }

        function newRow(oTable, nRow) {
            var aData = oTable.fnGetData(nRow);
            var jqTds = $('>td', nRow);
            var zones = JSON.parse(valueform.find('input[name="zonestring"]').val());
            var select = '<select class="form-control form-filter input-sm select2me" title="">';
            select += '<option value="-1">选择街道</option>';
            for (var i = 0; i < zones.length;i++){
                var zone = zones[i];
                select += '<option value="' + zone.id + '">' + zone.zone + '(' + zone.district + ')</option>';
            }
            select += '</select>';

            jqTds[0].innerHTML = select;
            jqTds[1].innerHTML = '<input type="text" class="form-control input-small" value="' + aData[1] + '">';
            jqTds[2].innerHTML = '<input type="text" class="form-control input-small" value="' + aData[2] + '">';
            jqTds[3].innerHTML = '<input type="text" class="form-control input-small" value="' + aData[3] + '">';
            jqTds[4].innerHTML = '<input type="text" class="form-control input-small" value="' + aData[4] + '">';
            jqTds[5].innerHTML = '<input type="text" class="form-control input-small" value="' + aData[5] + '">';
            jqTds[6].innerHTML = '<input type="text" class="form-control input-small" value="' + aData[6] + '">';
            jqTds[7].innerHTML = '<a class="edit form-control-static" href="">确定</a>';
            jqTds[8].innerHTML = '<a class="cancel form-control-static" href="">取消</a>';
        }

        function saveRow(oTable, nRow) {
            var jqInputs = $('input', nRow);
            var jqSelect = $('select', nRow);
            if (jqSelect[0].value == -1){
                alert('请选择街道');
                jqSelect[0].focus();
                return false;
            }
            var zonename = jqInputs[0].value;
            if (zonename == ''){
                alert('请输入小区/区域简称');
                jqInputs[0].focus();
                return false;
            }
            if (zonename.length > 255){
                alert('小区/区域简称太长');
                jqInputs[0].focus();
                return false;
            }
            var zoneaddress = jqInputs[1].value;
            if (zoneaddress == ''){
                alert('请输入地址');
                jqInputs[1].focus();
                return false;
            }
            if (zoneaddress.length > 255){
                alert('地址太长');
                jqInputs[1].focus();
                return false;
            }
            var zonenumber = jqInputs[2].value;
            if (zonenumber == ''){
                alert('请输入小区户数');
                jqInputs[2].focus();
                return false;
            }
            if(!IsNum(zonenumber)){
                alert("小区户数必须为数字");
                jqInputs[2].focus();
                return false;
            }
            var zonekey1 = jqInputs[3].value;
            if (zonekey1 == ''){
                alert('请输入区域1＃关键字');
                jqInputs[3].focus();
                return false;
            }
            var zonekey2 = jqInputs[4].value;
            if (zonekey2 != '' && zonekey2 == zonekey1){
                alert('2＃关键字不能与1＃关键字相同');
                jqInputs[4].focus();
                return false;
            }
            var zonekey3 = jqInputs[5].value;
            if (zonekey3 != '' && zonekey3 == zonekey2){
                alert('3＃关键字不能与2＃关键字相同');
                jqInputs[5].focus();
                return false;
            }
            if (zonekey3 != '' && zonekey3 == zonekey1){
                alert('3＃关键字不能与1＃关键字相同');
                jqInputs[5].focus();
                return false;
            }
            oTable.fnUpdate(jqSelect[0].value, nRow, 9, false);
            oTable.fnUpdate($(jqSelect[0]).find('option:selected').text(), nRow, 0, false);
            oTable.fnUpdate(zonename, nRow, 1, false);
            oTable.fnUpdate(zoneaddress, nRow, 2, false);
            oTable.fnUpdate(zonenumber, nRow, 3, false);
            oTable.fnUpdate(zonekey1, nRow, 4, false);
            oTable.fnUpdate(zonekey2, nRow, 5, false);
            oTable.fnUpdate(zonekey3, nRow, 6, false);
            oTable.fnUpdate('', nRow, 7, false);
            oTable.fnUpdate('<a class="delete" href="">删除</a>', nRow, 8, false);
            oTable.fnDraw();
            return true;
        }

        var table = $('#agent_zone_table');
        var oTable = table.dataTable({
            "lengthMenu": [
                [-1],
                ["所有"]
            ],
            "pageLength": 100,
            "order": [
                [0, "asc"]
            ],
            "dom": "<'row'<'col-md-8 col-sm-12'pli><'col-md-4 col-sm-12'<'table-group-actions pull-right'>>r><'table-scrollable't><'row'<'col-md-8 col-sm-12'pli><'col-md-4 col-sm-12'>>", // datatable layout
            "language": { // language settings
                // metronic spesific
                "metronicGroupActions": "已选择_TOTAL_条记录",
                "metronicAjaxRequestGeneralError": "无法完成数据请求，请检查网络连接",
                "infoFiltered": "(从_MAX_条记录中过滤)",
                // data tables spesific
                "lengthMenu": "",
                "info": "",
                "infoEmpty": "暂时还没有任何数据记录",
                "emptyTable": "没有任何数据记录",
                "zeroRecords": "没有符合条件的数据记录",
                "paginate": {
                    "previous": "上一页",
                    "next": "下一页",
                    "last": "最后页",
                    "first": "最前页",
                    "page": "第",
                    "pageOf": "页"
                }
            },
            "orderCellsTop": true,
            "columnDefs": [{ // set default column settings
                'orderable': false,
                'targets': [0]
            }, {
                "searchable": false,
                "targets": [0]
            }],
            aoColumnDefs: [{
                aTargets: [0],
                bSortable : true
            },{
                aTargets:[9],
                visible:false
            }],
            "pagingType": "bootstrap_extended", // pagination type(bootstrap, bootstrap_full_number or bootstrap_extended)
            "autoWidth": true, // disable fixed width and enable fluid table
            "processing": false, // enable/disable display message box on record load
            data:JSON.parse(valueform.find('input[name="villagestring"]').val())
        });

        var nEditing = null;

        $('#agent_zone_new').click(function (e) {
            e.preventDefault();
            if (nEditing !== null) {
                return;
            }
            var aiNew = oTable.fnAddData(['', '', '', '', '', '','','','','']);
            var nRow = oTable.fnGetNodes(aiNew[0]);
            newRow(oTable, nRow);
            nEditing = nRow;
        });


        table.on('click', '.delete', function (e) {
            e.preventDefault();

            if (confirm("是否删除该小区/区域 ?") == false) {
                return;
            }
            var nRow = $(this).parents('tr')[0];
            oTable.fnDeleteRow(nRow);
            form.find('input[name="zone"]').val(JSON.stringify(oTable.fnGetData()));
        });

        table.on('click', '.cancel', function (e) {
            e.preventDefault();
            if (nEditing !== null) {
                oTable.fnDeleteRow(nEditing);
                nEditing = null;
            }
        });

        table.on('click', '.edit', function (e) {
            e.preventDefault();
            if (nEditing !== null){
                if (saveRow(oTable, nEditing)){
                    form.find('input[name="zone"]').val(JSON.stringify(oTable.fnGetData()));
                    nEditing = null;
                }
            }
        });

        form.validate({
            doNotHideMessage: true,
            errorElement: 'span',
            errorClass: 'help-block help-block-error',
            focusInvalid: false,
            rules: {
                username:{
                    required:true,
                    minlength: 2,
                    maxlength: 64
                },
                password: {
                    minlength: 3,
                    required: true
                },
                password2: {
                    minlength: 3,
                    required: true,
                    equalTo: "#password"
                },
                showname: {
                    required: true
                },
                mobile:{
                    required:true,
                    minlength: 11,
                    maxlength: 11,
                    digits:true
                },
                idcard:{
                    required:true,
                    minlength: 18,
                    maxlength: 18,
                    digits:true
                },
                bankname:{
                    maxlength: 255
                },
                bankuser:{
                    maxlength: 255
                },
                bankno:{
                    maxlength: 255
                }
            },

            messages: {
                username:{
                    required: "请输入用户名",
                    minlength:'用户名太短',
                    maxlength:'用户名太长'
                },
                password: {
                    minlength: "登录密码长度太短",
                    required: "请输入登录密码"
                },
                password2: {
                    minlength: "确认登录密码长度太短",
                    required: "请再次输入登录密码",
                    equalTo: "两次输入密码不一致"
                },
                showname: {
                    required: "请输入姓名"
                },
                mobile:{
                    required:'请输入代理人手机号码',
                    minlength: '无效的手机号码',
                    maxlength: '无效的手机号码',
                    digits:'无效的手机号码'
                },
                idcard:{
                    required:'请输入代理人身份证号码',
                    minlength: '无效的身份证号码长度',
                    maxlength: '无效的身份证号码长度',
                    digits:'无效的身份证号码'
                },
                bankname:{
                    maxlength: '开户银行太长'
                },
                bankuser:{
                    maxlength: '开户名太长'
                },
                bankno:{
                    maxlength: '银行账号太长'
                }
            },

            errorPlacement: function (error, element) {
                error.insertAfter(element);
            },

            highlight: function (element) { // hightlight error inputs
                $(element)
                        .closest('.form-group').removeClass('has-success').addClass('has-error'); // set error class to the control group
            },

            unhighlight: function (element) {
                $(element).closest('.form-group').removeClass('has-error');
            },

            success: function (label) {
                label.addClass('valid').closest('.form-group').removeClass('has-error').addClass('has-success');
            },

            submitHandler: function (form) {
                submit(form);
            }

        });

        var submit = function(form){
            $.ajaxform(form);
        };

        var formwizard = $('#formwizard');

        var handleTitle = function(tab, navigation, index) {
            var total = navigation.find('li').length;
            var current = index + 1;
            jQuery('li', formwizard).removeClass("done");
            var li_list = navigation.find('li');
            for (var i = 0; i < index; i++) {
                jQuery(li_list[i]).addClass("done");
            }

            if (current == 1) {
                formwizard.find('.button-previous').hide();
            } else {
                formwizard.find('.button-previous').show();
            }

            if (current >= total) {
                formwizard.find('.button-next').hide();
                formwizard.find('.button-submit').show();
            } else {
                formwizard.find('.button-next').show();
                formwizard.find('.button-submit').hide();
            }
            Metronic.scrollTo($('.page-title'));
        };

        formwizard.bootstrapWizard({
            'nextSelector': '.button-next',
            'previousSelector': '.button-previous',
            onTabClick: function () {
                return false;
            },
            onNext: function (tab, navigation, index) {
                if (form.valid() == false) {
                    return false;
                }
                handleTitle(tab, navigation, index);
            },
            onPrevious: function (tab, navigation, index) {
                handleTitle(tab, navigation, index);
            },
            onTabShow: function (tab, navigation, index) {
                var total = navigation.find('li').length;
                var current = index + 1;
                var $percent = (current / total) * 100;
                formwizard.find('.progress-bar').css({
                    width: $percent + '%'
                });
            }
        });

        formwizard.find('.button-previous').hide();
        formwizard.find('.button-submit').click(function () {
            submit(form);
        }).hide();
    });
</script>
{?error}
    {>"share/message" type="error" content="{error}" /}
{/error}